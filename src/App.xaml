<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VampireTheMasquerade"
             x:Class="VampireTheMasquerade.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="/Pages/MainPages/MainPageStyle.xaml"/>
                <ResourceDictionary Source="/Pages/GameInformationPages/GameInformationStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <ControlTemplate x:Key="PageWithFooterTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    
                    <ContentPresenter Grid.Row="0"/>

                    <BoxView Grid.Row="1" 
                             BackgroundColor="#5E0C0C"
                             HorizontalOptions="Fill"
                             VerticalOptions="Fill"/>

                    <Label Grid.Row="1" 
                           Text="VAMPIRE: The Masquerade Launcher v1.0.0"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"
                           FontSize="12"
                           TextColor="White"
                           Margin="10, 0, 0, 0"/>

                    <Label Grid.Row="1" 
                           Text="© 2025 «Яра Сист»"
                           HorizontalOptions="End"
                           VerticalOptions="Center"
                           FontSize="12"
                           TextColor="White"
                           Margin="0, 0, 10, 0"/>
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>

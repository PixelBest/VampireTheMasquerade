<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="MainColor">#0D0D10</Color>
    <Color x:Key="MainRedColor">#5E0C0C</Color>

    <SolidColorBrush x:Key="MainColors" Color="{StaticResource MainColor}"/>
    <LinearGradientBrush x:Key="MainGradient" StartPoint="0.5,0.1" EndPoint="0.5,0.7">
        <GradientStop Color="{StaticResource MainColor}" Offset="0"/>
        <GradientStop Color="{StaticResource MainRedColor}" Offset="3"/>
    </LinearGradientBrush>
</ResourceDictionary>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VampireTheMasquerade.Pages.GameInformationPages.GameInformationPage"
             xmlns:local="clr-namespace:VampireTheMasquerade.Pages.GameInformationPages"
             ControlTemplate="{DynamicResource PageWithFooterTemplate}"
             xmlns:controls="clr-namespace:VampireTheMasquerade.Controls"
             Title="GameInformationPage">

    <Grid BackgroundColor="#0D0D10">
        <controls:TopMenu x:Name="TopMenuControl"
                          HorizontalOptions="Fill"
                          Description="Информация по игре"/>
        <Grid Style="{StaticResource GridItems}">
            <ScrollView>
                <VerticalStackLayout>
                    <CollectionView x:Name="MainCollectionView">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <local:DropdownList MainText="{Binding MainText}" 
                                                    ItemsSource="{Binding DropdownItems}"
                                                    ItemSelectedCommand="{Binding ItemSelectedCommand}"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <Grid Style="{StaticResource GridItemInformation}">
            <Label Text="Выберите пункт"
                   Style="{StaticResource LabelItemInformation}"/>
            <local:ItemInformation x:Name="ItemInformationView" IsVisible="False"/>
        </Grid>
    </Grid>
    
</ContentPage>
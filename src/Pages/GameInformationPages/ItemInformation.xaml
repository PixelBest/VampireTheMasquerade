<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VampireTheMasquerade.Pages.GameInformationPages.ItemInformation">
    <Grid>
        <Label x:Name="ItemLabel"
               FontSize="30"
               TextColor="White"
               LineBreakMode="WordWrap"
               VerticalOptions="Start"
               Margin="20, 30 , 100, 0"/>

        <Border Style="{StaticResource BorderItem}" VerticalOptions="Start" Margin="20, 70, 20, 0" ZIndex="30"/>

        <Label VerticalOptions="Fill"
               Background="#E0D8C0"
               Margin="20, 100, 20, 20"/>

        <ScrollView Margin="40, 130, 40, 20">
            <Label x:Name="ContentLabel" 
                   FontSize="16"
                   TextColor="Black"
                   LineBreakMode="WordWrap"
                   VerticalOptions="Fill"
                   Background="Transparent"
                   Margin="0, 0, 20, 0"/>
        </ScrollView>
        
    </Grid>
    
</ContentView>

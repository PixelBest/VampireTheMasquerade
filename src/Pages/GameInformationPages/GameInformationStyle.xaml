<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="GridItems" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="#0D0D10"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="Margin" Value="20, 100, 0, 20"/>
        <Setter Property="VerticalOptions" Value="Fill"/>
        <Setter Property="WidthRequest" Value="400"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0.5,0"
                               EndPoint="0.5,1">
                    <GradientStop Color="#191921" Offset="0"/>
                    <GradientStop Color="#5E0C0C" Offset="3"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GridItemInformation" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="#0D0D10"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="Margin" Value="440, 100, 20, 20"/>
        <Setter Property="VerticalOptions" Value="Fill"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0.5,0"
                           EndPoint="0.5,1">
                    <GradientStop Color="#191921" Offset="0"/>
                    <GradientStop Color="#5E0C0C" Offset="3"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="LabelItemInformation" TargetType="Label">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style x:Key="BorderItem" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="StrokeThickness" Value="2"/>
    </Style>

    <Style x:Key="DropdownButtonStyle" TargetType="Button">
        <Setter Property="Text" Value="▼"/>
        <Setter Property="WidthRequest" Value="40"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="Margin" Value="0, 0, 0, 0"/>
    </Style>

    <Style x:Key="DropdownCollectionViewStyle" TargetType="CollectionView">
        <Setter Property="IsVisible" Value="False"/>
        <Setter Property="HeightRequest" Value="0"/>
        <Setter Property="SelectionMode" Value="Single"/>
    </Style>
</ResourceDictionary>
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VampireTheMasquerade.MainPage"
             Style="{StaticResource MainPageStyles}"
             >
        <Grid>
            <StackLayout HorizontalOptions="Start"
                         VerticalOptions="Start">
                <ImageButton Style="{StaticResource TopMenuButton}"/>
            </StackLayout>
        <Grid ZIndex="1" Margin="0,150">
            <Image Style="{StaticResource MainPageImage}"
                       ZIndex="1"/>
            <Label Text="Добро пожаловать в&#10;VAMPIRE: The Masquerade"
                       Style="{StaticResource MainPageLabel}"
                       ZIndex="2"/>
        </Grid>
    </Grid>
</ContentPage>
